<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colo3"
        app:cardCornerRadius="15dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="15dp"
                android:id="@+id/namamenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:fontFamily="@font/roboto"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:maxLines="1"
                android:layout_marginTop="6dp"/>
            <TextView
                android:layout_marginLeft="15dp"
                android:id="@+id/harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 15.000,00"
                android:fontFamily="@font/roboto"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:maxLines="1"
                android:layout_below="@id/namamenu"/>

            <ImageButton
                android:layout_marginTop="22dp"
                android:id="@+id/buttonSubstract"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_toLeftOf="@id/txtJumlah"
                android:background="@drawable/ic_remove" />
            <TextView
                android:id="@+id/txtJumlah"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_toLeftOf="@id/buttonAdd"
                android:text="0"
                android:fontFamily="@font/roboto"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:textColor="@color/black"/>

            <ImageButton
                android:layout_marginTop="22dp"
                android:id="@+id/buttonAdd"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_add"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>