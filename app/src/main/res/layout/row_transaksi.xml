<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/colo3"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/relative">
            <TextView
                android:id="@+id/namaPelangganList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:fontFamily="@font/roboto"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/wktuList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01.00"
                android:textSize="15dp"
                android:layout_marginStart="12dp"
                android:layout_below="@id/namaPelangganList"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tglList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15-05-2023"
                android:textSize="15dp"
                android:layout_toRightOf="@id/wktuList"
                android:layout_marginStart="10dp"
                android:layout_below="@id/namaPelangganList"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/statusList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/roboto"
                android:layout_marginTop="10dp"
                android:text="Belum Dibayar"
                android:textColor="@color/black"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/mejaList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp"
                android:text="Meja 5"
                android:textSize="15dp"
                android:fontFamily="@font/roboto"
                android:layout_below="@id/statusList"
                android:textColor="@color/black"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>